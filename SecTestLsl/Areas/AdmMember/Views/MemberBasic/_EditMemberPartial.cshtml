@model MemberBasicViewModel
                <form asp-area="AdmMember" asp-controller="MemberBasic" asp-action="Edit" asp-route-id="@Model.MemberId">
                    <div>
                        <label asp-for="MemberShowName">@Html.DisplayNameFor(m => m.MemberShowName)</label>
                        <input asp-for="MemberShowName" />
                        <br />
                        <span asp-validation-for="MemberShowName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email">@Html.DisplayNameFor(m => m.Email)</label>
                        <input asp-for="Email" />
                        <br />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
    <div>
        <label>@Html.DisplayNameFor(m => m.GetCampInfo)</label>
        <div class="form-check">

            <label class="form-check-label">
                <input asp-for="GetCampInfo" class="form-check-input" type="radio"  value="是">
                是
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="GetCampInfo" class="form-check-input" type="radio" value="否">
                否
            </label>
        </div>
    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消 Close</button>
                        <button type="submit" class="btn btn-primary">修改 Understood</button>
                    </div>
                </form>